    <td class="d-none d-lg-table-cell">{{ buy_date }}</td>
    <td class="d-none d-sm-flex">
        <button type="button" class="btn btn-primary flex-fill m-1" data-toggle="modal" data-target="#detailsModal" data-id="{{ id_products }}">
