<tr>
    <td>{{ reference_number }}</td>
    <td>{{ name }}</td>
    <td>{{ category }}</td>
    <td>{{ price }}</td>
    <td>{{ buy_date }}</td>
    <td class="d-flex">
        <button type="button" class="btn btn-primary flex-fill mx-1" data-toggle="modal" data-target="#detailsModal" data-id="{{ id_products }}">
