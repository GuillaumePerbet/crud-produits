    <td>
        {{ name }}
        <div class="d-flex d-sm-none">
            <button type="button" class="btn btn-primary flex-fill m-1" data-toggle="modal" data-target="#detailsModal" data-id="{{ id_products }}">
                Details
            </button>
    
            <button type="button" class="btn btn-danger flex-fill m-1" data-toggle="modal" data-target="#deleteModal" data-id="{{ id_products }}">
