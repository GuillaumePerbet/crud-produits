<div class="modal-header mb-2">
    <!-- product details title -->
    <h2 class="modal-title">Delete product</h2>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p class="text-center large">Are you sure you want to delete {{ name }} ?</p>
</div>
<div class="modal-footer">
    <!-- confirm button -->
    <button id="delete-btn" type="button" class="btn btn-danger btn-lg flex-fill" data-id="{{ id_products }}">Delete</button>

    <!-- cancel button -->
    <button type="button" class="btn btn-primary btn-lg flex-fill" data-dismiss="modal">Cancel</button>
</div>